{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Linda Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/linda-server/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/linda-server",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Run Linda Server (Watch Mode)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/linda-server/main.py",
            "args": ["--watch"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/linda-server",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Animation Server Only",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/animation_server",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"],
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "port": 9229
        }
    ],
    "compounds": [
        {
            "name": "Full Stack: Linda + Animation",
            "configurations": ["Run Linda Server", "Animation Server Only"],
            "stopAll": true
        }
    ]
}
